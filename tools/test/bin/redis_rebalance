#!/usr/bin/env ruby
# -*- mode: ruby -*-
# Copyright (c) 2009-2011 VMware, Inc.
require "redis"
require File.dirname(__FILE__) + '/../lib/tools_test'

class RedisRebalance < ToolsTest

  def initialize
    super
    @gateway = @config["redis_gateway"]
    @app1_name = "rebalance1"
    @app2_name = "rebalance2"
  end

  def prepare
    super
    @instance_alias_array.push(%x[vmc create-service redis].split(/[\[\]]/)[1])
    @instance_alias_array.push(%x[vmc create-service redis].split(/[\[\]]/)[1])
    @instance_alias_array.push(%x[vmc create-service redis].split(/[\[\]]/)[1])
    @instance_alias_array.push(%x[vmc create-service redis].split(/[\[\]]/)[1])
    @instance_alias_array.push(%x[vmc create-service redis].split(/[\[\]]/)[1])
    @instance_alias_array.push(%x[vmc create-service redis].split(/[\[\]]/)[1])
    update_credentials
    add_app(@app1_name)
    %x[vmc bind-service #{@instance_alias} #{@app1_name}]
    add_app(@app2_name)
    %x[vmc bind-service #{@instance_alias} #{@app2_name}]
    add_redis_data(@credentials, "foo", "bar")
  end

  def work
    super
    rebalance("RaaS")
  end

  def verify
    super
    update_credentials
    if !verify_redis_credentials(@credentials, "foo", "bar")
      puts "Redis recover is failed in data restore"
      return
    end
    %x[vmc restart #{@app1_name}]
    credentials = get_app_credentials(@config["target"].gsub(/api/, @app1_name))
    if !verify_redis_credentials(credentials, "foo", "bar")
      puts "Redis rebalance is failed in credentials verify"
      return
    end
    %x[vmc restart #{@app2_name}]
    credentials = get_app_credentials(@config["target"].gsub(/api/, @app2_name))
    if !verify_redis_credentials(credentials, "foo", "bar")
      puts "Redis rebalance is failed in credentials verify"
      return
    end
    puts "Redis rebalance is successful"
  end

end

RedisRebalance.new.start
