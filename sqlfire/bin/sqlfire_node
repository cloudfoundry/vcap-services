#!/usr/bin/env ruby
# -*- mode: ruby -*-
# Copyright (c) 2009-2011 VMware, Inc.

ENV["BUNDLE_GEMFILE"] ||= File.expand_path("../../Gemfile", __FILE__)
require 'bundler/setup'
require 'vcap_services_base'

$LOAD_PATH.unshift(File.expand_path("../../lib", __FILE__))
require "sqlfire_service/sqlfire_node"

class VCAP::Services::Sqlfire::NodeBin < VCAP::Services::Base::NodeBin

  def node_class
    VCAP::Services::Sqlfire::Node
  end

  def default_config_file
    config_base_dir = ENV["CLOUD_FOUNDRY_CONFIG_PATH"] || File.join(File.dirname(__FILE__), '..', 'config')
    File.join(config_base_dir, 'sqlfire_node.yml')
  end

  def additional_config(options, config)
    options[:sqlfire_home] = parse_property(config, "sqlfire_home", String)
    options[:java_home] = parse_property(config, "java_home", String)
    options[:config_template] = File.expand_path("../../resources/sqlfire.properties.erb", __FILE__)
    options[:port_range] = parse_property(config, "port_range", Range)
    options[:available_memory] = parse_property(config, "available_memory", Integer)
    options[:max_memory] = parse_property(config, "max_memory", Integer)
    options
  end

end

VCAP::Services::Sqlfire::NodeBin.new.start
